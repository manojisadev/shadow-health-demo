<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Email</th>
          <th>Score</th>
          <th>Highest Streak</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each.with_index(1) do |f, index| %>
          <tr>
            <td><%= @users.offset + index %></td>
            <td><%= f.email %></td>
            <td><%= f.score %></td>
            <td><%= f.streak %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= will_paginate @users %>
  </div>
</div>